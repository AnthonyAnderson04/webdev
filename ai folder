// Example for dynamic content loading (e.g., news articles)
document.addEventListener('DOMContentLoaded', () => {
    const newsFeed = document.querySelector('.news-articles');

    // In a real application, this data would come from a backend API or database
    const newsData = [
        {
            image: 'images/news3.jpg',
            title: 'Coach Announces New Training Regimen',
            excerpt: 'The team is gearing up for the new season with an intensive new training program designed to boost performance...',
            link: '#'
        },
        {
            image: 'images/news4.jpg',
            title: 'Fan Fest Date Confirmed!',
            excerpt: 'Mark your calendars! Our annual Fan Fest will be held on [Date] at [Location]. Free entry and lots of activities...',
            link: '#'
        }
    ];

    newsData.forEach(article => {
        const articleElement = document.createElement('article');
        articleElement.classList.add('news-item');
        articleElement.innerHTML = `
            <img src="${article.image}" alt="${article.title}">
            <h3>${article.title}</h3>
            <p>${article.excerpt}</p>
            <a href="${article.link}" class="read-more">Read More</a>
        `;
        newsFeed.appendChild(articleElement);
    });

    // Example for a simple image gallery interaction (e.g., lightbox)
    const galleryImages = document.querySelectorAll('.gallery-grid img');
    galleryImages.forEach(image => {
        image.addEventListener('click', () => {
            // Implement a lightbox or modal here to show a larger version of the image
            console.log('Image clicked:', image.src);
            alert('Imagine a lightbox showing a larger image here!');
        });
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('nav a').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();

            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
});

